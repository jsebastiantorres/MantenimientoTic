@page
@model MyApp.Namespace.UpdateModel
@{
}

<div class="container">
    <button type="button" class="btn btn-info btn-sm"><a class="nav-link text-light" asp-area=""
            asp-page="/Clientes/cosultarClientes"><i class="fa-solid fa-arrow-left"></i></a></button>
</div>

<div class="text-center">
    <h3 class="">Actualizar Cliente</h3>
    <br>
    <h4 class="text-primary">Se actualizaran los datos para la siguiente persona</h4>
</div>

<div>
    <form method="post">
        <div class="row justify-content-center">
            <div class="form-group col-md-8">
                <label for="Nombre">Nombre</label>
                <input class="form-control" value="@Html.DisplayFor(m => m.Persona.Nombre)">
            </div>

            <div class="form-group col-md-8">
                <label for="Apellido">Apellido</label>
                <input class="form-control" value="@Html.DisplayFor(m => m.Persona.Apellido)">
            </div>

            <div class="form-group col-md-8">
                <label for="Email">Correo</label>
                <input class="form-control" value="@Html.DisplayFor(m => m.Persona.Email)">
            </div>

            <div class="form-group col-md-8">
                <label for="Dirrecion">Dirección</label>
                <input class="form-control" value="@Html.DisplayFor(m => m.Persona.Direccion)">
            </div>

            <div class="form-group col-md-8">
                <label for="Telefono">Teléfono</label>
                <input class="form-control" value="@Html.DisplayFor(m => m.Persona.Telefono)">
            </div>
        </div>

        @* <div class="form-group col-md-8">
            <input type="submit" value="Actualizar Cliente" class="btn btn-success"/>
            </div> *@

        <div class="row justify-content-center">
            <div class="form-group">
                <input type="hidden" asp-for="Persona.PersonaId">
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar Cliente" class="btn btn-success btn-lg" />
                <a class="btn btn-secondary btn-lg" href="/Clientes/cosultarClientes" role="button">Cancelar</a>
            </div>
        </div>

    </form>

</div>