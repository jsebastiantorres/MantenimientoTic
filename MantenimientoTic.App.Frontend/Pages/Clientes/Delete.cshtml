@page
@model MyApp.Namespace.DeleteModel
@{
}

<div class="container">
    <button type="button" class="btn btn-info btn-sm"><a class="nav-link text-light" asp-area=""
            asp-page="/Clientes/cosultarClientes"><i class="fa-solid fa-arrow-left"></i></a></button>
</div>

<div class="text-center">
    <h3 class="">Eliminar Cliente</h3>
    <br>
    <h4 class="text-danger">¿Está seguro que quiere eliminar esta persona?</h4>
</div>

<div class="row justify-content-center justify-items-center">
    <table class="table table-striped text-center ">
        <thead class="bg-dark text-light">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Correo</th>
                <th>Dirección</th>
                <th>Télefono</th>
            </tr>
        </thead>
        <tr>
            <td>@Html.DisplayFor(m => m.Persona.PersonaId)</td>
            <td>@Html.DisplayFor(m => m.Persona.Nombre)</td>
            <td>@Html.DisplayFor(m => m.Persona.Apellido)</td>
            <td>@Html.DisplayFor(m => m.Persona.Email)</td>
            <td>@Html.DisplayFor(m => m.Persona.Direccion)</td>
            <td>@Html.DisplayFor(m => m.Persona.Telefono)</td>
        </tr>
    </table>
</div>

<div class="row justify-content-center justify-items-center">
    <form method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Persona.PersonaId">
        </div>
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger btn-lg m-1" />
            <a class="btn btn-secondary btn-lg" href="/Clientes/cosultarClientes" role="button">Cancelar</a>
        </div>

    </form>
</div>
