<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MantenimientoTic.TeamDesarrollo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!--Font Awesome-->
    @* <script src="https://kit.fontawesome.com/50ff11670d.js" crossorigin="anonymous"></script> *@
    <script src="https://kit.fontawesome.com/3469b67fa1.js" crossorigin="anonymous"></script>
    
    <!--Iconos Bootstrap-->
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"> *@
</head>

<body>
    <header class="bg-dark text-light">
        <div class="container text-light p-1">
            <h3><a class="text-light" asp-area="" asp-page="/Index"><i class="fa-solid fa-car"></i>MantenimientoTic</a></h3>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3 ">
            <div class="container">
                @* <a class="navbar-brand text-light" asp-area="" asp-page="/Index"><i class="fa-regular
                    fa-car-side"></i>MantenimientoTic</a> *@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <button type="button" class="btn btn-primary btn-sm"><a class="nav-link text-light" asp-area=""
                            asp-page="/Index">Home</a></button>
                            </li> *@
                        @* <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li> *@
                        <li class="nav-item m-1">
                            <button type="button" class="btn btn-info btn-sm"><a class="nav-link text-light" asp-area=""
                                    asp-page="/Vistas/cosultarClientes">Consultar Clientes</a></button>
                        </li>
                        <li class="nav-item m-1">
                            <button type="button" class="btn btn-info btn-sm"><a class="nav-link text-light" asp-area=""
                                    asp-page="/Vistas/registrarCliente">Registrar Cliente</a></button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TeamDesarrollo - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
